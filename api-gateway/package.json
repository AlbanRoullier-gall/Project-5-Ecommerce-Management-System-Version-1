{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "API Gateway - E-commerce Platform",
  "main": "dist/src/index.js",
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/src/index.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc && tsc-alias && npm run build:fix-output",
    "build:fix-output": "node -e \"const fs=require('fs');const path=require('path');const dist='dist';if(fs.existsSync(path.join(dist,'api-gateway','src','index.js'))){const src=path.join(dist,'api-gateway','src');const target=path.join(dist,'src');if(!fs.existsSync(target)){fs.mkdirSync(target,{recursive:true});}fs.readdirSync(src).forEach(f=>{fs.renameSync(path.join(src,f),path.join(target,f));});fs.rmSync(path.join(dist,'api-gateway'),{recursive:true,force:true});}\"",
    "build:watch": "tsc --watch"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "form-data": "^4.0.4",
    "helmet": "^7.2.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.3.2"
  }
}
